<%= simple_form_for(@poll) do |f| %>
<div class="row-fluid">
  <div class="span3">
    <%= f.input :status_poll, collection: StatusPoll.to_a, input_html: { class: 'span12'} %>
  </div>
</div>
<div class="row-fluid">
  <div class="span3">
   <%= f.input :proposal, :url => autocomplete_proposal_polls_path, :as => :autocomplete %>
  </div>
</div>
<div class="form-actions">
  <%= f.button :submit, :class => "btn btn-success" %>
  <%= link_to 'Voltar', polls_path, :class => "btn"  %>
</div>

<% end %>
