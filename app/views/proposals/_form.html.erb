<%= simple_form_for(@proposal) do |f| %>
<div class="row-fluid">
  <div class="span12">
    <%= f.input :name, input_html: { class: 'span12'} %>
  </div>
</div>
<div class="row-fluid">
  <div class="span12">
    <%= f.input :description, input_html: { class: 'span12', rows: 10} %>
  </div>
</div>
<div class="row-fluid">
  <div class="span3">
    <%= f.input :type_proposal, collection: TypeProposal.to_a, input_html: { class: 'span12'} %>
  </div>
</div>
<div class="row-fluid">
  <div class="span3">
    <%= f.input :user_id, collection: User.all, input_html: { class: 'span12'} %>
  </div>
</div>
<div class="form-actions">
  <%= f.button :submit, :class => "btn btn-success" %>
  <%= link_to 'Voltar', proposals_path, :class => "btn"  %>
</div>

<% end %>
